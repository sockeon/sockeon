{
    "name": "sockeon/sockeon",
    "description": "Framework-agnostic PHP WebSocket and HTTP server library with attribute-based routing and support for namespaces and rooms.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Sockeon\\Sockeon\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "xentixar",
            "email": "xentixar@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "keywords": [
        "websocket",
        "socket",
        "http",
        "https",
        "realtime",
        "event-driven",
        "php",
        "laravel",
        "symfony",
        "framework-agnostic"
    ],
    "require-dev": {
        "pestphp/pest": "^3.8",
        "phpstan/phpstan": "^2.1",
        "ext-sockets": "*"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
